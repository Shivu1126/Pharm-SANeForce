<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/staff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:text="Wasim Jaffer Ahmeed - HQ - designation"
                android:textStyle="bold"
                android:textColor="@color/dark_pink"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_color"
                android:layout_below="@id/staff_name"/>
            <RelativeLayout
                android:id="@+id/work_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_below="@id/view"
                android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/work_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:textColor="@color/light_text_color"
                android:text="Work Type"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/work_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/work_type_label"
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/text_dark"
                android:text="Field Work"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/checkin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/work_type"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/light_text_color"
                android:text="Check IN time &amp; location "
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/checkin_time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkin_label"
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/text_dark"
                android:text="17 Oct 2023 04:32 PM"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkin_label"
                android:layout_toRightOf="@id/checkin_time_date"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/location_icon"/>
            <TextView
                android:id="@+id/view_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:layout_below="@id/checkin_label"
                android:layout_toRightOf="@id/location_icon"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/dark_pink"/>
            <TextView
                android:id="@+id/checkin_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkin_time_date"
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/text_dark"
                android:text="No.4 Chaimers Road, Nandanam, Chennai."
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/remarks_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkin_location"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/light_text_color"
                android:text="Remarks "
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/remarks_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/remarks_label"
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:text="Field Work planned according to allocation"
                android:textSize="18sp"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sub_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/work_checkin"
                android:layout_marginStart="100dp"
                android:layout_below="@id/view"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/submitted_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/light_text_color"
                    android:text="Submitted Date"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/submitted_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/submitted_date_label"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:text="20 Oct 2023"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/checkout_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/submitted_date"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/light_text_color"
                    android:text="Check Out time &amp; location "
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/checkout_time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_label"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/text_dark"
                    android:text="18 Oct 2023 01:32 AM"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/location_icon_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_label"
                    android:layout_toRightOf="@id/checkout_time_date"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/location_icon"/>
                <TextView
                    android:id="@+id/view_location_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:layout_below="@id/checkout_label"
                    android:layout_toRightOf="@id/location_icon_"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/dark_pink"/>
                <TextView
                    android:id="@+id/checkout_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_time_date"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/text_dark"
                    android:text="No.4 Chaimers Road, Nandanam, Chennai."
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/icons_layout"
                android:layout_marginStart="140dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/work_checkin"
                android:layout_below="@id/sub_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/doctors_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/text_dark"
                        app:cardCornerRadius="15dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/doctor_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="25"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/doctor_icon"
                        android:layout_marginTop="-15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/chemist_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/doctors_layout">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/text_dark"
                        app:cardCornerRadius="15dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/chemist_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="25"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chemist"
                        android:layout_marginTop="-15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/stockiest_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/chemist_layout">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/text_dark"
                        app:cardCornerRadius="15dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/stockiest_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="25"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stockiest_icon"
                        android:layout_marginTop="-15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cip_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/stockiest_layout">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/text_dark"
                        app:cardCornerRadius="15dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/cip_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="25"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cip_icon"
                        android:layout_marginTop="-15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hospital_layout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/cip_layout">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/text_dark"
                        app:cardCornerRadius="15dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:id="@+id/hospital_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="25"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hospital_icon"
                        android:layout_marginTop="-15dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/status_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sub_checkout"
                android:layout_marginStart="110dp"
                android:layout_below="@id/view"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/light_text_color"
                    android:text="Status"
                    android:textSize="18sp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/status_card"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/status_label"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="40dp"
                    android:backgroundTint="@color/light_color"
                    app:cardCornerRadius="10dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:text="Pending"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:layout_marginTop="120dp"
                    android:layout_below="@id/status_card"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="70dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>