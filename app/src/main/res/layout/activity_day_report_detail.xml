<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayReportDetailActivity"
    android:background="@color/background">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/text_dark">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/day_report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day Report (18 Oct 2023)"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"/>

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/tool_bar"
        android:layout_margin="20dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            android:layout_marginStart="0dp">
            <EditText
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:hint="Search..."
                android:textColorHint="@color/light_text_color"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@color/white"/>
            <View
                android:id="@+id/search_view"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@color/text_dark"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:layout_gravity="end|center"
                android:layout_marginEnd="15dp"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_layout"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="Wasim Jaffer Ahmeed - HQ - designation"
            android:textStyle="bold"
            android:textColor="@color/dark_pink"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_color"
            android:layout_below="@id/staff_name"/>
        <RelativeLayout
            android:id="@+id/icons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/view">
            <LinearLayout
                android:id="@+id/all_layout"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/text_dark"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp">
                    <TextView
                        android:id="@+id/all_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="25"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/all_card"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/light_color"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/text_dark"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="-10dp">
                    <TextView
                        android:id="@+id/all_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/doctors_layout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/all_layout"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/doctor_tab_round"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp">
                    <TextView
                        android:id="@+id/doctor_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/doctor_card"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/doctor_tab"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="-10dp">
                    <TextView
                        android:id="@+id/doctor_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctors"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chemist_layout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/doctors_layout"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/chemist_tab_round"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp">
                    <TextView
                        android:id="@+id/chemist_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chemist_card"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/chemist_tab"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="-10dp">
                    <TextView
                        android:id="@+id/chemist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chemist"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stockiest_layout"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/chemist_layout"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/stockiest_tab_round"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp">
                    <TextView
                        android:id="@+id/stockiest_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/stockiest_card"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/stockiest_tab"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="-10dp">
                    <TextView
                        android:id="@+id/stockiest_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stockiest"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hospital_layout"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/stockiest_layout"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/hospital_tab_round"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp">
                    <TextView
                        android:id="@+id/hospital_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/hospital_card"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/hospital_tab"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="-10dp">
                    <TextView
                        android:id="@+id/hospital_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospital"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cip_layout"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/hospital_layout"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/cip_tab_round"
                    app:cardCornerRadius="15dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp">
                    <TextView
                        android:id="@+id/cip_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cip_card"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/cip_tab"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="-10dp">
                    <TextView
                        android:id="@+id/cip_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Commercial Important Person"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workers_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icons_layout"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bg"
            android:visibility="visible"/>
    </RelativeLayout>
</RelativeLayout>